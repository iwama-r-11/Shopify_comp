<div class="modal-display-wrapper">
  <div class="image-wrapper">
    <a href="{{ section.settings.link }}" target="_blank">
       <img src="{{ section.settings.pcImage | img_url: 'master' }}" loading="lazy" alt="{{ section.settings.image.alt | escape }}" class="pcOnly">
       <img src="{{ section.settings.spImage | img_url: 'master' }}" loading="lazy" alt="{{ section.settings.image.alt | escape }}" class="spOnly">
    </a>
    <div class="close-button">
        <div class="close-button__line"></div>
        <div class="close-button__line"></div>
    </div>
  </div>
</div>

{% style %}
  .spOnly {
     display: none; 
  }
  .pcOnly {
    display: block;
  }
  @media screen and (max-width: 767px) {
    .pcOnly {
      display: none;
    }
    .spOnly {
       display: block; 
    }
  }
 .modal-display-wrapper {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999999;
    display: flex;
    justify-content: right;
    align-items: flex-end;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .modal-display-wrapper.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-display-wrapper > .image-wrapper {
    position: fixed;
    right: 20px;
    bottom: 0px;
    width: 100%;
    max-width: {{section.settings.img_size}}px;
    transition: all 1s ease;
  }

    .modal-display-wrapper.active > .image-wrapper {
      bottom: 60px;
      width: 100%;
      max-width: {{section.settings.img_size}}px;
  }
  
  @media screen and (max-width: 767px) {
    .modal-display-wrapper > .image-wrapper {
      right: 50%;
      bottom: 10%;
      transform: translateX(50%);
    }
    .modal-display-wrapper.active > .image-wrapper {
      bottom: 30%;
    }
  }

  .modal-display-wrapper .image-wrapper a img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    vertical-align: bottom;
  }
  
  .modal-display-wrapper > .image-wrapper > .close-btn {
    position: absolute;
    width: 30px;
    height: 30px;
    top: 5px;
    right: 5px;
    line-height: 30px;
    /* background-color: #ffffff; */
    color: #fff;
    border-radius: 50%;
    text-align: center;
    cursor: pointer;
    font-size: 30px;
  }

  .close-button {
  --close-btn-size: 20px;
  --close-btn-width: 100%;
  --close-btn-height: 2px;
  --close-btn-color: #fff;
 
  position: absolute;
  top: 12px;
  right: 12px;
  height: var(--close-btn-size);
  width: var(--close-btn-size);
  background-color: transparent;
  border-color: transparent;
  cursor: pointer;
  }
   
  .close-button__line {
    position: absolute;
    background: var(--close-btn-color);
  }
   
  .close-button__line:nth-child(1) {
    left: 0;
    top: 50%;
    transform: translate(0%, -50%) rotate(45deg);
    width: var(--close-btn-width);
    height: var(--close-btn-height);
  }
   
  .close-button__line:nth-child(2) {
    left: 50%;
    top: 0;
    transform: translate(-50%, 0%) rotate(45deg);
    width: var(--close-btn-height);
    height: var(--close-btn-width);
  }
{% endstyle %}

<script>
   const targetmodal = document.querySelector('.modal-display-wrapper');
  const sessionStrageKey = 'modal-display';
  const sessionStrageValue = 'on';
  const closeBtn = document.querySelector('.close-button');

  window.addEventListener('load', () => {
    if (!sessionStorage.getItem(sessionStrageKey)) {
    //sessionStrageに記録されているかで分岐
      sessionStorage.setItem(sessionStrageKey, sessionStrageValue);
      setTimeout(() => {
        targetmodal.classList.add('active');
      }, 1000);
    }
  });
  closeBtn.addEventListener('click', () => {
    targetmodal.classList.remove('active');
  });
</script>

